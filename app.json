{
  "expo": {
    "name": "my-app",
    "slug": "my-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "proto.purpose.vercel.app",
      "buildNumber": "2",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSSpeechRecognitionUsageDescription": "Speech is converted to text so you can chat hands-free.",
        "NSMicrophoneUsageDescription": "Your microphone is needed for speech recognition.",
        "NSCameraUsageDescription": "Camera access is used to capture screenshots for feedback.",
        "NSPhotoLibraryAddUsageDescription": "Photo library access is used to save screenshots for feedback.",
        "NSUserTrackingUsageDescription": "We do not track users for advertising purposes.",
        "NSPrivacyPolicyURL": "https://api.purpose.ai/api/legal/privacy",
        "NSTermsOfServiceURL": "https://api.purpose.ai/api/legal/terms",
        "NVAppGroupIdentifier": "group.proto.purpose.vercel.app.notif",
        "UIBackgroundModes": ["remote-notification"],
        "FirebaseAppDelegateProxyEnabled": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.RECORD_AUDIO"
      ],
      "package": "proto.purpose.vercel.app"
    },
    "extra": {
      "eas": {
        "projectId": "323c4da1-bb75-4970-83f2-142070b9535b"
      }
    },
    "plugins": [
      "expo-speech-recognition",
      "expo-notifications"
    ]
  }
}
