# Next.js Frontend Environment Variables (.env.local.example)
# IMPORTANT: Copy this file to .env.local and fill in your actual values
# .env.local contains sensitive values and should NOT be committed to version control

# Database connection string
DATABASE_URL="postgresql://username:password@hostname:5432/database_name"

# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key

# LLM API Keys
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key
GOOGLE_API_KEY=your_google_api_key
DEEPSEEK_API_KEY=your_deepseek_api_key

# Email Settings
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=your_email@example.com

# Admin Users (comma-separated list of Clerk user IDs)
FOUNDER_CLERK_IDS=user_id1,user_id2,user_id3

# Push Notifications (optional)
ENABLE_PUSH_SNIPPETS=false
ALLOW_PUSH_TEST_ENDPOINT=false

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://your-production-url.com,http://localhost:3000

# Vector Database Settings (for future RAG implementation)
EMBEDDING_MODEL=text-embedding-3-small
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_HOST=https://your-pinecone-index.svc.pinecone.io
PINECONE_INDEX=your_pinecone_index_name

# Default system prompt (optional)
DEFAULT_SYSTEM_PROMPT_ID=your_default_prompt_id